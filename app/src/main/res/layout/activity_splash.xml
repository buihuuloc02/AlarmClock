<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_splash"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_app_main"
            android:foregroundGravity="center"
            android:visibility="gone" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imgClock2"
            android:layout_width="@dimen/size_image_200"
            android:layout_height="@dimen/size_image_200"
            android:background="@drawable/alarm_clock_sleep"
            android:foregroundGravity="center" />


        <TextView
            android:id="@+id/tvTitleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLogo"
            android:layout_margin="@dimen/margin_20"
            android:fontFamily="@font/simplyfont"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_25_sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>